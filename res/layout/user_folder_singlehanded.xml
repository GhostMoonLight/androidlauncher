<?xml version="1.0" encoding="utf-8"?>
<com.android.launcher3.FolderSingleHanded xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/user_folder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.android.launcher3.FolderEditText
        android:id="@+id/folder_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#00000000"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_horizontal"
        android:hint="@string/folder_hint_text"
        android:imeOptions="flagNoExtractUi"
        android:paddingTop="@dimen/folder_name_padding"
        android:paddingBottom="@dimen/folder_preview_padding"
        android:singleLine="true"
        android:maxLength="10"
        android:textColor="#BBffffff"
        android:textColorHighlight="#99EEEEEE"
        android:textColorHint="#99ffffff"
        android:textCursorDrawable="@null"
        android:textSize="21sp" 
        android:layout_gravity="center_horizontal"/>

    <com.android.launcher3.view.SingleHandedView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/folder_scroll_padding_port"
        android:paddingLeft="@dimen/folder_scroll_padding_land"
        android:paddingRight="@dimen/folder_scroll_padding_land"
        android:paddingTop="@dimen/folder_preview_padding" >

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.android.launcher3.CellLayout
                android:id="@+id/folder_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:cacheColorHint="#ff333333"
                android:hapticFeedbackEnabled="false" />
        </LinearLayout>
    </com.android.launcher3.view.SingleHandedView>

</com.android.launcher3.FolderSingleHanded>