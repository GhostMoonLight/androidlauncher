<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pageindicator="http://schemas.android.com/apk/res-auto"
    xmlns:switchviewpager="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.android.launcher3.swipe.SwitchViewPager
        android:id="@+id/viewpager"
        switchviewpager:style="stack"
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:background="@color/alpha_black_2"/>

    <com.android.launcher3.pageindicator.PageIndicatorView
        android:id="@+id/pageindicatorview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_margin="@dimen/default_sapce_6"
        pageindicator:piv_animationDuration="400"
        pageindicator:piv_animationType="worm"
        pageindicator:piv_padding="4.5dp"
        pageindicator:piv_radius="4dp"
        pageindicator:piv_selectedColor="#CCFFFFFF"
        pageindicator:piv_unselectedColor="#66FFFFFF"/>
</FrameLayout>
