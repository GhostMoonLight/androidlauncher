<?xml version="1.0" encoding="utf-8"?>
<com.android.launcher3.view.RecentUseAppView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" 
        android:orientation="vertical">

        <ImageView
            android:id="@+id/app_icon"
            android:layout_width="@dimen/app_icon_size"
            android:layout_height="@dimen/app_icon_size"
            android:scaleType="center" 
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/app_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_sapce_4"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingLeft="@dimen/default_sapce_4"
            android:paddingRight="@dimen/default_sapce_4"
            android:singleLine="true"
            android:textColor="@color/workspace_icon_text_color"
            android:textSize="@dimen/text_size_13sp" >
        </TextView>
    </LinearLayout>

</com.android.launcher3.view.RecentUseAppView>